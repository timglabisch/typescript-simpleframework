{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2015"],
    "target": "ES5",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "outDir": "build",
    "module": "ES2015",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "node_modules/**/*",
    "./**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}
